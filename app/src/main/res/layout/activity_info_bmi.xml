<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InfoBmiActivity"
        android:layout_marginBottom="@dimen/BMI_MARGIN_BOTTOM"
        android:layout_marginEnd="@dimen/BMI_MARGIN_END"
        android:layout_marginStart="@dimen/BMI_MARGIN_START"
        android:layout_marginTop="@dimen/BMI_MARGIN_TOP">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:srcCompat="@drawable/bmi_class"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/BMI_MARGIN_START"
            android:layout_alignParentTop="true"
            android:id="@+id/imageView"
            android:layout_marginTop="2dp"
            android:layout_toStartOf="@+id/bmiValue"
            android:layout_marginEnd="@dimen/BMI_MARGIN_END"
            app:srcCompat="@drawable/bmi_class"
            android:contentDescription="@string/BMI_INFO_PIC"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/BMI_MARGIN_END"
            android:id="@+id/bmiValue"
            android:textSize="50sp"
            android:layout_marginTop="@dimen/BMI_MARGIN_INFO_TOP"
            android:layout_alignParentTop="true"
            android:textAlignment="center"/>
    <TextView
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/BMI_MARGIN_START"
            android:id="@+id/bmiDescriptionLong"
            android:layout_marginTop="@dimen/BMI_MARGIN_TOP"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/BMI_MARGIN_BOTTOM"
            android:layout_below="@+id/imageView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/BMI_MARGIN_END"/>
    <TextView
            android:text="@string/BMI_OBESE3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/BMI_MARGIN_END"
            android:id="@+id/bmiClass"
            android:layout_marginTop="@dimen/BMI_MARGIN_TOP"
            android:layout_below="@+id/bmiValue"
            android:textSize="20sp"/>
</RelativeLayout>